<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ap.deepstroll.mapper.LogMapper">

    <resultMap id="LogMap" type="ap.deepstroll.entity.LogEntity">
        <result property="id" column="id"/>
        <result property="adminId" column="admin_id"/>
        <result property="type" column="type"/>
        <result property="tableName" column="table_name"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insertLog" parameterType="ap.deepstroll.entity.LogEntity">
        INSERT INTO 
        log(
            admin_id,
            type,
            table_name,
            content 
        )
        VALUES(
            #{adminId},
            #{type},
            #{tableName},
            #{content} 
        )
    </insert>

    <select id="queryLog" resultMap="LogMap">
        SELECT
            id,
            admin_id,
            type,
            table_name,
            content,
            create_time
        FROM log
        LIMIT #{startIndex}, #{pageSize}
    </select>

    <select id="queryLogNum" resultType="Integer">
        SELECT
        count(*)
        FROM log
    </select>

    <select id="queryLogByAdminIdTypeTableNameTime" resultMap="LogMap">
        SELECT
            id,
            admin_id,
            type,
            table_name,
            content,
            create_time
        FROM log
        <where>
            <if test="adminId != null">
                AND admin_id = #{adminId} 
            </if>
            <if test="type != null">
                AND type = #{type} 
            </if>
            <if test="tableName != null">
                AND table_name = #{tableName} 
            </if>
            <if test="startTime != null">
                AND create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND create_time &lt;= #{endTime} 
            </if>
        </where>
        LIMIT #{startIndex}, #{pageSize} 
    </select>

</mapper>