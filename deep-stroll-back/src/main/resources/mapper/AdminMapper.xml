<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ap.deepstroll.mapper.AdminMapper">

    <resultMap id="AdminMap" type="ap.deepstroll.entity.AdminEntity">
        <result property="id" column="id"/>
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <result property="state" column="state"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTIme" column="update_time"/>
    </resultMap>

    <insert id="insertAdmin">
        INSERT INTO
        admin(
            account,
            password
        )
        VALUES(
            #{account},
            #{password}
        )
    </insert>

    <select id="queryAdmin" resultMap="AdminMap">
        SELECT
            id,
            account,
            password,
            state,
            create_time,
            update_time
        FROM admin
        <where>
            <if test="state != null">
                AND state = #{state}
            </if>
        </where> 
        LIMIT #{startIndex}, #{pageSize}
    </select>

    <select id="queryAdminNum" resultType="Integer">
        SELECT
            count(*)
        FROM admin
        <where>
            <if test="state != null">
                AND state = #{state}
            </if>
        </where>
    </select>

    <update id="updateAdminState">
        UPDATE admin
        SET state = #{state}
        WHERE id = #{id}
    </update>

</mapper>